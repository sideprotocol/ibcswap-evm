{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "es7",
        "esnext.asynciterable"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "baseUrl": ".",
      "rootDir": ".",
      "outDir": "lib",
      "declaration": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": [
      "index.ts",
    ]
  }
  